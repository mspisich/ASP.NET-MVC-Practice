@{
    ViewBag.Title = "Register";
}

<h2>Please fill the form to register!</h2>

<form name="Reg" action="success" method="get" onsubmit="return ValidateForm()">
    <p>First Name:</p>

    <input type="text" id="First" name="FirstName" required/>

    <p>Last Name:</p>

    <input type="text" id="Last" name="LastName" required/>

    <p>Email:</p>

    <input type="text" id="Email" name="Email" required/>

    <p>Phone Number:</p>

    <input type="text" id="Phone" name="Phone"/>

    <fieldset id="PasswordInput">
        <p>Password:</p>

        <input type="text" id="Password" name="Password" required />

        <p>Confirm Password:</p>

        <input type="text" id="PasswordConfirm" name="PasswordConfirm" required />
    </fieldset>

    <p>Sign up for our newsletter?</p>

    <fieldset id="NewsletterSignup">
        <input type="radio" id="Newsletter" name="Newsletter" value="Yes" checked />Yes
        <input type="radio" id="Newsletter" name="Newsletter" value="No" />No<br />
    </fieldset>

    <input type="submit" name="submit" value="Submit">
</form>

<script>
    function ValidateForm() {
        var email = $("#Email").val();
        var pass = $("#Password").val();
        var passConfirm = $("#PasswordConfirm").val();

        if (pass !== passConfirm) {
            alert("Passwords do not match.");
        }

        //if (email.indexOf('') !== 1) {
        //    alert("Invalid email address.");
        //}
    }
</script>